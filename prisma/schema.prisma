// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Usuario {
  idUsuario String @db.Uuid @id @default(uuid()) @map("id_usuario")
  nome String @db.VarChar(50)
  email String @db.VarChar(50) @unique
  senha String @db.VarChar(50)

  tweets Tweet[]
  likes Like[]
  seguidores Seguidor[]
  replies Reply[]

  dhrCriacao DateTime @default(now()) @map("dhr_criacao")
  dhrAtualizacao DateTime @updatedAt @map("dhr_atualizacao")

  @@map("usuario")
}


model Tweet {
  idTweet String @db.Uuid @id @default(uuid()) @map("id_tweet")
  conteudo String
  tipo String
  idUsuario String @db.Uuid @map("id_usuario")

  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])
  likes Like[]
  replies Reply[]

  dhrCriacao DateTime @default(now()) @map("dhr_criacao")
  dhrAtualizacao DateTime @updatedAt @map("dhr_atualizacao")

  @@map("tweet")
}


model Like {
  idLike String @db.Uuid @id @default(uuid()) @map("id_like")
  idUsuario String @db.Uuid @map("id_usuario")
  idTweet String @db.Uuid @map("id_tweet")

  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])
  tweet Tweet @relation(fields: [idTweet], references: [idTweet])

  dhrCriacao DateTime @default(now()) @map("dhr_criacao")
  dhrAtualizacao DateTime @updatedAt @map("dhr_atualizacao")

  @@map("like")
}


model Seguidor {
  idSeguidor String @db.Uuid @id @default(uuid()) @map("id_seguidor")
  idUsuario String @db.Uuid @map("id_usuario")
  idSeguido String @db.Uuid @map("id_seguido")

  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])

  dhrCriacao DateTime @default(now()) @map("dhr_criacao")
  dhrAtualizacao DateTime @updatedAt @map("dhr_atualizacao")

  @@map("seguidor")
}


model Reply {
  idReply String @db.Uuid @id @default(uuid()) @map("id_reply")
  conteudo String
  tipo String @default("R")
  idTweetOriginal String @db.Uuid @map("id_tweet_original")
  idUsuario String @db.Uuid @map("id_usuario")

  tweetOriginal Tweet @relation(fields: [idTweetOriginal], references: [idTweet])
  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])

  dhrCriacao DateTime @default(now()) @map("dhr_criacao")
  dhrAtualizacao DateTime @updatedAt @map("dhr_atualizacao")

  @@map("reply")
}
